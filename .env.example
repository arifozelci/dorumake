# ==============================================
# KolayRobot Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env file to git!
# ==============================================

# JWT Authentication - REQUIRED
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY="your-64-character-random-secret-key-here"

# Admin Password - REQUIRED
# This is the password for the admin user
ADMIN_PASSWORD="your-secure-admin-password"

# ==============================================
# Database (SQL Server)
# ==============================================
DB_HOST="localhost"
DB_PORT=1433
DB_USER="sa"
DB_PASSWORD="your-database-password"
DB_NAME="DoruMake"
DB_DRIVER="ODBC Driver 18 for SQL Server"

# ==============================================
# Email Configuration (IMAP for reading orders)
# ==============================================
EMAIL_HOST="imap.gmail.com"
EMAIL_PORT=993
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# ==============================================
# SMTP for Notifications
# ==============================================
NOTIFY_ENABLED=true
NOTIFY_SMTP_HOST="smtp.gmail.com"
NOTIFY_SMTP_PORT=587
NOTIFY_SMTP_USER="your-email@gmail.com"
NOTIFY_SMTP_PASSWORD="your-smtp-password"

# ==============================================
# Mutlu Ak√º Portal Credentials
# ==============================================
MUTLU_USERNAME="your-mutlu-portal-username"
MUTLU_PASSWORD="your-mutlu-portal-password"

# ==============================================
# Mann & Hummel (TecCom) Portal Credentials
# ==============================================
MANN_USERNAME="your-mann-portal-username"
MANN_PASSWORD="your-mann-portal-password"

# ==============================================
# Playwright Browser Settings
# ==============================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=100
PLAYWRIGHT_TIMEOUT=30000

# ==============================================
# Application Settings
# ==============================================
ENVIRONMENT="production"
DEBUG=false
LOG_LEVEL="INFO"
